<% if logged_in? %>
  <%= link_to "Create New Photo", new_photo_path%>
<% else %>
  <%= link_to "Login", login_users_path%> and add new photos.
<% end %>
<br/>
<hr/>

<div style="padding:10px; margin:10px;background-color:#efefef; border: 2px solid #aaa">

<% unless @photos.empty? %>
  <ul class="photos_list">
    <% @photos.each do |photo| %>
    <li><%= link_to image_tag(photo.photo.url(:thumb)), photo_path(photo) %></li>
    Created by: <%= photo.user.name%>

    <% end %>
  </ul>
<% else %>
  No Photos Found!
<% end %>
</div>

