<% title "Comments" %>

<div id="comments">
<% for comment in @comments %>
  <div class="comment">
    <%=simple_format comment.comment %>
  </div>
<% end %>
</div>


<h2>New Comment</h2>

<% form_for [@commentable, Comment.new] do |f| %>
  <p>
    <%= f.label :comment %><br />
    <%= f.text_area :comment %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
