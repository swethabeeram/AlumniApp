<% if logged_in? %>
  <%= link_to "Create New Message", new_message_path%>
<% else %>
  <%= link_to "Login", login_users_path%> and add new messages.
<% end %>
<br/>
<hr/>
 <% @messages.each do |message|%>
   <div style="padding:10px; margin:10px;background-color:#efefef; border: 2px solid #aaa">
     <strong><%= link_to message.title, message_path(message)%></strong>
     <br/>

      Title: <%= message.title%>
      <br/>

      <small>Published on: <%= format_date(message.created_at)%></small>
      <br/>

      <small>Published by: <%= message.user.name %></small>
      <br/>

    </div>
  <% end %>
