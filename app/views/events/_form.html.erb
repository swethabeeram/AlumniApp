<%
  if @event.new_record?
    url = events_path
    method = :post
  else
    url = event_path(@event)
    method = :put
  end
%>

  <% if @event.errors.any?%>
    <div id="errors" style="color:red;padding:10px; border:2px solid yellow; background-color: lightyellow;">
      <strong>Event was not saved because of the following errors:</strong>
      <ul>
        <% @event.errors.full_messages.each do |message|%>
          <li><%= message%></li>
        <% end %>
      </ul>
    </div>
  <% end %>


<div style="padding:10px; margin:10px;background-color:#efefef; border: 2px solid #aaa">
  <%= form_for @event, :url => url, :method => method do |f|%>

    Title: <%= f.text_field :title %> <br/><br/>

    Description: <%= f.text_area :description %> <br/><br/>

    <%= f.label :event_at %><br />
    <%= f.text_field :event_at_date, :class => 'datepicker', :size => 10, :maxlength => 10 %>
      <%= f.text_field :event_at_time, :size => 5, :maxlength => 5 %>
      <br/><br/>

    <%= f.submit "Save this Event" %>

    <%= f.submit "Cancel" %>
  <% end %>
</div>
